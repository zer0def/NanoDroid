#!/system/bin/sh
# bash: wrapper to set up and run bash from terminal
# osm0sis @ xda-developers
# adopted to GNU Bash setialpha @ xda-developers

dir="$(cd "$(dirname "${0}")"; pwd)"

if [ "${1}" == "--term" ]; then
	term="${2}";
	shift 2;
else
	term=xterm
fi

"${dir}/bash.bin" --rcfile /system/etc/bashrc ${*}
