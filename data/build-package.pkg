#!/bin/bash

create_full_package () {
	ZIP="NanoDroid-${VERSION}.zip"

	print_package "Full"

	zip_add Full
	zip_add_setup 1

	sum_sign_package "${ZIP}"
}

mk_pkg_full () {
	create_full_package &
	progress "${!}"
}

